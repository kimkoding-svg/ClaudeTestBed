{
  "name": "ai-companion-app",
  "version": "0.1.0",
  "description": "AI Companion Desktop Application with Voice Interface and Permanent Memory",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "npm run build:main && concurrently -n vite,server -c cyan,green \"vite\" \"npm run server\"",
    "dev:public": "npm run build:main && concurrently -n vite,server,tunnel -c cyan,green,magenta \"vite\" \"npm run server\" \"node scripts/tunnel.js\"",
    "server": "node server/index.js",
    "build": "npm run build:main && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "node tests/run-tests.js",
    "test:watch": "nodemon tests/run-tests.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@lancedb/lancedb": "^0.10.0",
    "@modelcontextprotocol/sdk": "^1.0.3",
    "better-sqlite3": "^11.5.0",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.36.4",
    "electron-store": "^10.0.0",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "openai": "^4.73.1",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.0.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@ngrok/ngrok": "^1.7.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.28.1",
    "electron": "^32.3.3",
    "electron-builder": "^25.1.7",
    "electron-vite": "^5.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^8.0.1"
  },
  "author": "Your Name",
  "license": "MIT",
  "build": {
    "appId": "com.aicompanion.app",
    "productName": "AI Companion",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
